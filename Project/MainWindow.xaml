<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SnapsToDevicePixels="True">
    <Grid RenderTransformOrigin="0.53,0.513">
        <Label Content="ELEMENT42" HorizontalAlignment="Left" Height="85" Margin="258,0,0,0" VerticalAlignment="Top" Width="266" FontSize="48" FontFamily="Showcard Gothic"/>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="239" Margin="510,81,0,0" VerticalAlignment="Top" Width="260" RenderTransformOrigin="0.5,0.5" CornerRadius="5"/>
        <Grid Name="LoginPanel" HorizontalAlignment="Left" Height="239" Margin="510,81,0,0" VerticalAlignment="Top" Width="260">
            <Grid.RowDefinitions>
                <RowDefinition Height="229*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Label Content="Welcome to ELEMENT42" HorizontalAlignment="Left" Margin="34,7,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
            <Label Content="Enter your credentials to log into the system&#xA;" HorizontalAlignment="Left" Margin="8,29,0,0" VerticalAlignment="Top" Height="30" Width="245"/>
            <TextBox HorizontalAlignment="Left" Height="26" Margin="27,78,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="205" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" MaxLength="32" MaxLines="1" BorderThickness="1" ToolTip="Enter your username here" AutomationProperties.HelpText="Username" Background="White" TextChanged="TextBox_TextChanged"/>
            <TextBox HorizontalAlignment="Left" Height="26" Margin="27,125,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="205" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" Background="White" MaxLines="1" MaxLength="32"/>
            <Button Content="Login" HorizontalAlignment="Left" Margin="144,166,0,0" VerticalAlignment="Top" Width="88" Height="25" Background="{x:Null}" FontWeight="Bold" FontFamily="Segoe UI Black" Tag="LoginBtn" Click="Button_Click" AutomationProperties.Name="LoginBtn"/>
            <CheckBox Content="Remember Me" HorizontalAlignment="Left" Margin="29,171,0,0" VerticalAlignment="Top"/>
            <Grid HorizontalAlignment="Left" Height="239" Margin="510,81,-510,-81" VerticalAlignment="Top" Width="260" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="229*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                <Label Content="Welcome to ELEMENT42" HorizontalAlignment="Left" Margin="34,7,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
                <Label Content="Enter your credentials to log into the system&#xA;" HorizontalAlignment="Left" Margin="8,29,0,0" VerticalAlignment="Top" Height="30" Width="245"/>
                <TextBox HorizontalAlignment="Left" Height="26" Margin="27,78,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="205" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" MaxLength="32" MaxLines="1" BorderThickness="1" ToolTip="Enter your username here" AutomationProperties.HelpText="Username" Background="White" TextChanged="TextBox_TextChanged"/>
                <TextBox HorizontalAlignment="Left" Height="26" Margin="27,125,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="205" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" Background="White" MaxLines="1" MaxLength="32"/>
                <Button Content="Login" HorizontalAlignment="Left" Margin="144,166,0,0" VerticalAlignment="Top" Width="88" Height="25" Background="{x:Null}" FontWeight="Bold" FontFamily="Segoe UI Black" Tag="LoginBtn" Click="Button_Click" AutomationProperties.Name="LoginBtn"/>
                <CheckBox Content="Remember Me" HorizontalAlignment="Left" Margin="29,171,0,0" VerticalAlignment="Top"/>
            </Grid>
            <TextBlock HorizontalAlignment="Left" Margin="87,201,0,0" TextWrapping="Wrap" Text="Forgot Password" VerticalAlignment="Top" MouseLeftButtonDown="ForgotPasswordClick" MouseEnter="ForgotPasswordHover" MouseLeave="ForgotPasswordLeave" Name="ForgotPassword"/>
        </Grid>

    </Grid>
</Window>
